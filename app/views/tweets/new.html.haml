= render 'header'
.content__box
  .contents.row
    .container
      = form_for @tweet ,enctype:"multipart/form-data" do |f|
        =f.label :text
        =f.text_field :text
        = hidden_field_tag "action", params[:action]
        = hidden_field_tag "route", "tweets"
        = hidden_field_tag "idParams", @tweet.id
        .field.image
          %i.far.fa-check-square
          #img_field{:onclick => "$('#upicon').click()"}
            - if @tweet.image.present?
              = "#{image_tag @tweet.image}"
            - else
              %i.fas.fa-image
              %i.fas.fa-file-upload.add
          =f.file_field :image, class: "icon", style: "display:none;", id: "upicon"
        = f.submit "変更"
        .overlay{style: "display:none;"}
          .crop_modal
          .close_btn
          .select_icon_btn 決定

