= render 'header'
.contents.row
.tweet__row
  = render 'tweet.detail'
  .comment__side-box
    .comment__list
      -@comments.each do |comment|
        .comment__list--box
          .commented__user
            =comment.user.nickname
          .commented__text
            =comment.text
    .edit__list
      -if current_user.id == @tweet.user_id
        .edit-box
          =link_to 'Edit',edit_tweet_path(@tweet)
        .delete-box
          =link_to 'Delete',tweet_path(@tweet),method: :delete
      -else 
        .comment--box
          =form_for ([@tweet, @comment]) do |f|
            .comment--box__label
              =f.label :text
            .comment--box__text
              =f.text_field :text
            .comment--box__btn
              =f.submit "Comment"


